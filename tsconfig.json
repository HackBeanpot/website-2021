{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"],
      "@styles/*": ["./styles/*"],
      "@stories/*": ["./stories/*"]
    }
  },
  "include": ["./src/**/**/*"]
}
